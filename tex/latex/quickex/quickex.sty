% quickex.sty: lightweight LaTeX style for short math exercises
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{quickex}[2025/11/06 Minimal exercise setup]

% Core math packages
\RequirePackage{amsmath, amssymb, amsfonts, mathtools}
\RequirePackage{enumitem}
\RequirePackage{xcolor}
\RequirePackage[most]{tcolorbox}

% Clean layout
\setlength{\parindent}{0pt}
\setlength{\parskip}{6pt}
\setlist{nosep, leftmargin=*}

% Simple colors
\definecolor{qboxbg}{gray}{0.98}
\definecolor{qboxborder}{gray}{0.6}

% Question box
\newtcolorbox{question}[1][]{
  colback=qboxbg,
  colframe=qboxborder,
  boxrule=0.5pt,
  rounded corners,
  title=\textbf{#1},
  fonttitle=\bfseries,
  before skip=1em,
  after skip=1em,
}

% Shortcut environments
\newenvironment{solution}{\textbf{Solution.}\ }{}

% Math shorthand
\renewcommand{\vec}[1]{\mathbf{#1}}
\newcommand{\R}{\mathbb{R}}

\numberwithin{equation}{section}
